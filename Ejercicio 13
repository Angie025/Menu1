import time

def mostrar_menu():
    print("1. Opción 1")
    print("2. Opción 2")
    print("3. Opción 3")
    print("4. Opción 4")
    print("5. Opción 5")
    print("6. Opción 6")
    print("7. Opción 7")
    print("8. Opción 8")
    print("9. Opción 9")
    print("10. Opción 10")
    print("11. Opción 11")
    print("12. Opción 12")
    print("13. Opción 13")
    print("14. Opción 14")
    print("15. Opción 15")
    print("16. Opción 16")
    print("17. Opción 17")
    print("18. Opción 18")
    print("19. Opción 19")
    print("20. Opción 20")
    print("21. Opción 21")
    print("22. Salir")

def calcular_sueldo(total_horas):
    # Supongamos que el sueldo por hora es fijo, por ejemplo, $10 por hora.
    sueldo_por_hora = 10
    sueldo = total_horas * sueldo_por_hora
    return sueldo

def ejecutar_opcion(opcion):
    if opcion == 1:
        print("Ejecutando opción 1")
        # Agregar código para la opción 1
    # Resto de las opciones...

    elif opcion == 13:
        print("Ejecutando opción 13")
        # Agregar código para el Ejercicio 13

        # Ingresar horas trabajadas para cada día de la semana
        horas_trabajadas = [int(input(f"Ingrese las horas trabajadas para el día {i + 1}: ")) for i in range(6)]

        # Calcular el total de horas trabajadas en la semana
        total_horas = sum(horas_trabajadas)

        # Calcular el sueldo correspondiente
        sueldo = calcular_sueldo(total_horas)

        # Mostrar resultados
        print(f"Total de horas trabajadas: {total_horas} horas")
        print(f"Sueldo correspondiente: ${sueldo}")

    # Resto de las opciones...

    elif opcion == 22:
        print("Saliendo del programa...")
        exit()
    else:
        print("Opción no válida")

def main():
    while True:
        mostrar_menu()
        opcion = int(input("Selecciona una opción: "))
        ejecutar_opcion(opcion)

if __name__ == "__main__":
    main()