total_meses = 20
pago_inicial = 10
factor_duplicacion = 2

total_pago = 0
pago_mensual = pago_inicial

for mes in range(total_meses):
    total_pago += pago_mensual
    print(f"Mes {mes + 1}: Pago mensual = {pago_mensual} € - Total pagado hasta ahora = {total_pago} €")
    pago_mensual *= factor_duplicacion

print(f"\nTotal pagado después de {total_meses} meses: {total_pago} €")
